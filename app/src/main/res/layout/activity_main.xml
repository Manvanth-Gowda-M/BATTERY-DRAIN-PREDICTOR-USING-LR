<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="80dp">

            <!-- Top App Bar / Header -->
            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvGreeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello, User"
                        android:textColor="?android:attr/textColorSecondary"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dashboard"
                        android:textColor="?android:attr/textColorPrimary"
                        android:fontFamily="sans-serif-black"
                        android:textSize="32sp"/>
                </LinearLayout>

                <!-- Small circular current battery indicator -->
                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle_background">
                    <TextView
                        android:id="@+id/tvCurrentBattery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="85%"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-black"
                        android:textColor="?colorPrimary"/>
                </FrameLayout>
            </LinearLayout>

            <!-- Predict Hero Card (Remaining Time) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/heroCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@id/headerLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_gradient_hero"
                    android:padding="32dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvEstimatedLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estimated Remaining Time"
                        android:textColor="@android:color/white"
                        android:alpha="0.8"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:textAllCaps="true"/>

                    <TextView
                        android:id="@+id/tvRemainingTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calculating..."
                        android:textColor="@android:color/white"
                        android:textSize="48sp"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="24dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/pill_background_transparent"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@android:drawable/ic_lock_idle_charging"
                            app:tint="@android:color/white"/>

                        <TextView
                            android:id="@+id/tvDailyDrain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Predicted Drain: -- mAh/day"
                            android:textColor="@android:color/white"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvStatsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:text="Today's Device Stats"
                android:textSize="20sp"
                android:fontFamily="sans-serif-black"
                android:textColor="?android:attr/textColorPrimary"
                app:layout_constraintTop_toBottomOf="@id/heroCard"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- 2x2 Stats Grid -->
            <GridLayout
                android:id="@+id/statsGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:columnCount="2"
                android:rowCount="2"
                app:layout_constraintTop_toBottomOf="@id/tvStatsLabel">

                <!-- Stat Card 1: App Usage -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAppUsage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_phone_android"
                                app:tint="?colorPrimary"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="App Usage"
                                android:fontFamily="sans-serif-medium"
                                android:textSize="14sp"
                                android:textColor="?android:attr/textColorSecondary"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvAppUsage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0h 0m"
                            android:textSize="26sp"
                            android:fontFamily="sans-serif-black"
                            android:layout_marginTop="12dp"
                            android:textColor="?colorPrimary"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Stat Card 2: Screen Time -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardScreenTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_visibility"
                                app:tint="?colorPrimary"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Screen"
                                android:fontFamily="sans-serif-medium"
                                android:textSize="14sp"
                                android:textColor="?android:attr/textColorSecondary"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvScreenTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0h"
                            android:textSize="26sp"
                            android:fontFamily="sans-serif-black"
                            android:layout_marginTop="12dp"
                            android:textColor="?colorPrimary"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Stat Card 3: Installed Apps -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardNumApps"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_apps"
                                app:tint="?colorPrimary"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Apps"
                                android:fontFamily="sans-serif-medium"
                                android:textSize="14sp"
                                android:textColor="?android:attr/textColorSecondary"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvNumApps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="26sp"
                            android:fontFamily="sans-serif-black"
                            android:layout_marginTop="12dp"
                            android:textColor="?colorPrimary"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Stat Card 4: Data Usage -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardDataUsage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_data_usage"
                                app:tint="?colorPrimary"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Data"
                                android:fontFamily="sans-serif-medium"
                                android:textSize="14sp"
                                android:textColor="?android:attr/textColorSecondary"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvDataUsage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 MB"
                            android:textSize="26sp"
                            android:fontFamily="sans-serif-black"
                            android:layout_marginTop="12dp"
                            android:textColor="?colorPrimary"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

            <!-- Hardware Health Section -->
            <TextView
                android:id="@+id/tvHardwareLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="Hardware Health"
                android:textSize="20sp"
                android:fontFamily="sans-serif-black"
                android:textColor="?android:attr/textColorPrimary"
                app:layout_constraintTop_toBottomOf="@id/statsGrid"
                app:layout_constraintStart_toStartOf="parent"/>

            <HorizontalScrollView
                android:id="@+id/svHardware"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clipToPadding="false"
                android:paddingHorizontal="16dp"
                android:scrollbars="none"
                app:layout_constraintTop_toBottomOf="@id/tvHardwareLabel">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Temperature Pill -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="0dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="12dp">
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_thermostat"
                                app:tint="?colorPrimary"/>
                            <TextView
                                android:id="@+id/tvTemp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="-- Â°C"
                                android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Health Pill -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="0dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="12dp">
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_favorite"
                                app:tint="?colorPrimary"/>
                            <TextView
                                android:id="@+id/tvHealth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="Good"
                                android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Voltage Pill -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="0dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="12dp">
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_info"
                                app:tint="?colorPrimary"/>
                            <TextView
                                android:id="@+id/tvVoltage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="-- mV"
                                android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Top Apps Section -->
            <TextView
                android:id="@+id/tvTopAppsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="Top Drainers"
                android:textSize="20sp"
                android:fontFamily="sans-serif-black"
                android:textColor="?android:attr/textColorPrimary"
                app:layout_constraintTop_toBottomOf="@id/svHardware"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Container for dynamic injection of top apps -->
            <LinearLayout
                android:id="@+id/llTopAppsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvTopAppsLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Hidden Refresh Action (We auto-refresh now, but keep utility if needed) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_popup_sync"
        app:tint="?colorOnPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Refresh Stats" />

</androidx.constraintlayout.widget.ConstraintLayout>
